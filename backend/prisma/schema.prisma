datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model EstimatedRide {
  id Int @default(autoincrement()) @id
  customer  Customer @relation(fields: [customerId], references: [id])
  customerId Int
  originLat Float
  destinationLat Float
  originLng Float
  destinationLng Float
  distance Int
  duration String
}

model Ride {
  id Int @default(autoincrement()) @id
  customer  Customer @relation(fields: [customerId], references: [id])
  customerId Int
  origin String
  destination String
  distance Int
  duration String
  createdAt  DateTime @default(now())
  driver Driver @relation(fields: [driverId], references: [id])
  driverId Int
  value Int
}

model Customer {
  id    Int     @default(autoincrement()) @id
  estimatedRides   EstimatedRide[]
  rides Ride[]
}

model Driver {
  id Int @default(autoincrement()) @id
  name String
  description String
  car String
  rating String
  price Int
  minDistance Int
  rides Ride[]
}
